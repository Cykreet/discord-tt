{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "outDir": "dist",
    "removeComments": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "esModuleInterop": true
  },
  "include": ["*", "src/*"],
  "exclude": ["node_modules"]
}